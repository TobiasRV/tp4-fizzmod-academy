<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color:blue;">Ingrese datos</h1>
        <br>

        <form action="/data" method="post" enctype="multipart/form-data" >

            <div class="form-group">
                <label for="name"><b>Nombre</b></label>
                <input id="name" class="form-control" type="text" name="name">
            </div>

            <div class="form-group">
                <label for="price"><b>Precio</b></label>
                <input id="price" class="form-control" type="number" name="price">
            </div>

            <div class="form-group">
                <label for="description"><b>Descripcion</b></label>
                <input id="description" class="form-control" type="text" name="description">
            </div>
            <div class="form-group">
                <label for="photo"><b>Foto</b></label>
                <input id="photo" class="form-control" type="file" name="photo">
            </div>

            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
</div>


